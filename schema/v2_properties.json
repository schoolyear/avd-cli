{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "v2_layer_properties",
  "title": "V2 Layer Properties",
  "description": "Properties schema for an image layer",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "enum": [
        "v2"
      ]
    },
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-]+$",
      "minLength": 1,
      "maxLength": 25
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 100
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "required": [
        "name",
        "email"
      ]
    },
    "network": {
      "type": "object",
      "properties": {
        "http_proxy_whitelist": {
          "description": "HTTP(s) hosts that are whitelisted in the proxy. Note that the application must be configured to use the proxy or support Windows IE proxy settings",
          "type": "array",
          "maxItems": 500,
          "items": {
            "type": "string",
            "pattern": "^[\\w\\-.*]+:[\\d*]+$",
            "description": "Hostname:port combination, supports * wildcards"
          }
        },
        "whitelisted_public_ips": {
          "description": "List of IPs or CIDR ranges that are whitelisted for outgoing connections. These should be public IPs",
          "type": "array",
          "maxItems": 100,
          "items": {
            "type": "object",
            "properties": {
              "target": {
                "description": "IP or CIDR range",
                "type": "string",
                "examples": [
                  "1.1.1.1",
                  "1.1.1.1/24"
                ]
              },
              "port": {
                "description": "port or port range",
                "type": "string",
                "pattern": "^([0-9]{1,5}|[0-9]{1,5}-[0-9]{1,5})$",
                "minLength": 1,
                "maxLength": 11,
                "examples": [
                  "1234",
                  "1234-1236"
                ]
              }
            },
            "required": [
              "target"
            ]
          }
        },
        "whitelisted_internal_ips": {
          "type": "array",
          "maxItems": 100,
          "items": {
            "type": "object",
            "properties": {
              "hostname": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9-]*[a-zA-Z0-9])?$",
                "minLength": 1,
                "maxLength": 63
              },
              "port": {
                "description": "port or port range",
                "type": "string",
                "pattern": "^([0-9]{1,5}|[0-9]{1,5}-[0-9]{1,5})$",
                "minLength": 1,
                "maxLength": 11,
                "examples": [
                  "1234",
                  "1234-1236"
                ]
              }
            },
            "required": [
              "hostname"
            ]
          }
        }
      }
    }
  },
  "required": [
    "version",
    "name",
    "author",
    "network"
  ]
}